{
  "name": "rcaron",
  "description": "RCaron(Ř) for VSCode",
  "displayName": "RCaron",
  "author": "Jan0660",
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "Jan0660",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jan0660/rcaron-vscode.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/src/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "configurationDefaults": {
      "[rcaron]": {
        "editor.semanticHighlighting.enabled": true
      }
    },
    "languages": [
      {
        "id": "rcaron",
        "extensions": [
          ".rcaron",
          ".ř"
        ],
        "aliases": [
          "RCaron",
          "rcaron",
          "ř",
          "Ř"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./icon.png",
          "light": "./icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "rcaron",
        "scopeName": "source.rcaron",
        "path": "./syntaxes/rcaron.tmLanguage.json"
      },
      {
        "scopeName": "markdown.rcaron.codeblock",
        "path": "./syntaxes/rcaron-md-injection.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.rcaron": "rcaron"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "RCaron",
      "properties": {
        "rcaron.languageServerPath": {
          "type": "string",
          "default": null,
          "markdownDescription": "%rcaron.configuration.languageServerPath.description%",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/src/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "yarn esbuild-base -- --sourcemap",
    "esbuild-watch": "yarn esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "clean": "gulp clean"
  },
  "devDependencies": {
    "@types/mocha": "8.0.0",
    "@types/node": "16.4.2",
    "@types/vscode": "^1.75.0",
    "@vscode/l10n-dev": "^0.0.18",
    "esbuild": "^0.17.11",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver-protocol": "^3.17.3"
  }
}
